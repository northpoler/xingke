<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.jianbing.about.me.web.api.dao.AdDao">
    <sql id="adInfo">
        a.id,
        a.category_id AS categoryId,
        a.title,
        a.sub_title AS subTitle,
        a.url
    </sql>

    <select id="selectByCategoryId" resultType="pro.jianbing.about.me.domain.Ad">
        SELECT
        <include refid="adInfo"/>
        FROM
        ad AS a
        WHERE
        a.category_id = #{categoryId}
    </select>



</mapper>