<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.jianbing.about.me.web.api.dao.BookDao">
    <select id="allBooks" resultType="pro.jianbing.about.me.domain.Book">
        SELECT
          b.id,
          b.name,
          b.englishName,
          b.page1,
          b.page2,
          b.page3,
          b.backCover,
          b.author,
          b.price,
          b.count
        FROM
          book AS b
    </select>

</mapper>